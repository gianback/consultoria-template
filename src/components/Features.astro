---
const caracteristicas = [
  {
    icono: "experience",
    titulo: "Experiencia Comprobada",
    descripcion: "Más de 15 años asesorando a empresas de todos los sectores con metodologías probadas y resultados tangibles."
  },
  {
    icono: "confidentiality",
    titulo: "Confidencialidad Total",
    descripcion: "Su información estratégica está protegida con los más altos estándares de seguridad y acuerdos de confidencialidad."
  },
  {
    icono: "results",
    titulo: "Resultados Garantizados",
    descripcion: "Nos comprometemos con métricas claras y objetivos medibles. Si no cumplimos, trabajamos hasta lograrlo."
  },
  {
    icono: "team",
    titulo: "Equipo Multidisciplinario",
    descripcion: "Consultores especializados en finanzas, operaciones, tecnología y recursos humanos para una visión integral."
  }
];

const iconos: Record<string, string> = {
  experience: `<path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>`,
  confidentiality: `<rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/>`,
  results: `<line x1="18" y1="20" x2="18" y2="10"/><line x1="12" y1="20" x2="12" y2="4"/><line x1="6" y1="20" x2="6" y2="14"/>`,
  team: `<path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/>`
};
---

<section class="features section">
  <div class="container">
    <div class="features-wrapper">
      <div class="features-header">
        <span class="section-tag">Por qué elegirnos</span>
        <h2 class="features-title">Los pilares de nuestra consultoría</h2>
        <p class="features-subtitle">
          Combinamos experiencia, metodología y compromiso para impulsar el éxito de su organización
        </p>
      </div>

      <div class="features-grid">
        {caracteristicas.map((caracteristica) => (
          <article class="feature-card">
            <div class="feature-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <Fragment set:html={iconos[caracteristica.icono]} />
              </svg>
            </div>
            <h3 class="feature-title">{caracteristica.titulo}</h3>
            <p class="feature-description">{caracteristica.descripcion}</p>
          </article>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .features {
    background: linear-gradient(135deg, var(--color-primary-dark) 0%, var(--color-primary) 100%);
    position: relative;
    overflow: hidden;
  }

  .features::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.03'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  }

  .features-wrapper {
    position: relative;
    z-index: 1;
  }

  .features-header {
    text-align: center;
    margin-bottom: var(--spacing-12);
  }

  .section-tag {
    display: inline-block;
    padding: var(--spacing-2) var(--spacing-4);
    background-color: rgba(255, 255, 255, 0.15);
    color: var(--color-white);
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: var(--radius-full);
    margin-bottom: var(--spacing-4);
  }

  .features-title {
    font-size: var(--text-4xl);
    color: var(--color-white);
    margin-bottom: var(--spacing-4);
  }

  .features-subtitle {
    font-size: var(--text-lg);
    color: var(--color-gray-300);
    max-width: 600px;
    margin: 0 auto;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--spacing-6);
  }

  .feature-card {
    background-color: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    padding: var(--spacing-8);
    border-radius: var(--radius-xl);
    text-align: center;
    transition: transform var(--transition-base), background-color var(--transition-base);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .feature-card:hover {
    transform: translateY(-8px);
    background-color: rgba(255, 255, 255, 0.15);
  }

  .feature-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 72px;
    height: 72px;
    background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-accent-dark) 100%);
    border-radius: var(--radius-lg);
    margin-bottom: var(--spacing-5);
    color: var(--color-white);
  }

  .feature-title {
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--color-white);
    margin-bottom: var(--spacing-3);
  }

  .feature-description {
    font-size: var(--text-sm);
    line-height: 1.7;
    color: var(--color-gray-300);
    margin: 0;
  }

  @media (max-width: 1024px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .features-grid {
      grid-template-columns: 1fr;
    }

    .feature-card {
      padding: var(--spacing-6);
    }
  }
</style>
